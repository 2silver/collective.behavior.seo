<metal:div
  tal:condition="python:view.available() and view.outdated()"
  i18n:domain="collective.behavior.seo"
>
  <div
    data-status="outdated"
    data-nosnippet
    tal:condition="view/outdated|nothing"
    class="discreet highlight alert alert-info outdated container relative flex flex-col text-lg leading-relaxed wysiwig__text text-primary-500"
    tal:define="
      outdated view/outdated|nothing;
      alternate view/seo_alternate|nothing;
    "
  >
    <p class="mt-0 bg-primary-100 px-6">
      <span
        tal:condition="python:context.portal_type == 'News Item'"
        i18n:translate=""
      >
        This article is older than a year.
      </span>
      <span
        tal:condition="python:context.portal_type == 'Event'"
        i18n:translate=""
      >
        This event has already taken place.
      </span>
    </p>
  </div>
</metal:div>
